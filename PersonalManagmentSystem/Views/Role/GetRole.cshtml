@model PersonalManagmentSystem.Models.Entity.Tbl_Role
@{
    ViewBag.Title = "GetRole";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Edit Role</h2>

@using (Html.BeginForm("EditRole", "Role", FormMethod.Post))
{
    <div class="form-group">
        @Html.LabelFor(m => m.RoleID)
        @Html.TextBoxFor(m => m.RoleID, new { @class = "form-control", @ReadOnly = "true" })

        <br />

        @Html.LabelFor(m => m.RoleName)
        @Html.TextBoxFor(m => m.RoleName, new { @class = "form-control" })
    </div>

    <div>
        <button class="btn btn-primary">Save</button>
    </div>
}